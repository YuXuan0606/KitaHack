<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Your current Coin Balance TextView -->
    <TextView
        android:id="@+id/txtCoinBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Coin Balance: 0"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- Buttons to redeem vouchers -->
    <Button
        android:id="@+id/btnRedeem5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem RM5 Voucher"/>

    <Button
        android:id="@+id/btnRedeem10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem RM10 Voucher"/>

    <!-- Section to display redeemed vouchers -->
    <TextView
        android:id="@+id/txtRedeemedVouchers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeemed Vouchers:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

</LinearLayout>
